.p-home {
  min-height: 100vh;
  background-color: #edf0f6;
  font-size: 24rpx;
  padding-bottom: 20rpx;
}
.p-home .block {
  position: absolute;
  right: 20rpx;
  top: 0;
  font-weight: normal;
  display: flex;
}
.p-home .btns {
  margin: 0 auto 20rpx;
  width: 560rpx;
  display: flex;
}
.p-home .btns .btn {
  flex: 1;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #f2f2f2;
  color: #000;
  margin-right: 4rpx;
}
.p-home .btns .btned {
  background-color: #0db0f4;
  color: #fff;
}
.p-home .btns .btn:first-child {
  border-radius: 25rpx 0 0 25rpx;
}
.p-home .btns .btn:last-child {
  border-radius: 0 25rpx 25rpx 0;
}
.p-home__header {
  background: linear-gradient(#b2e0f5, #02a5ee);
  text-align: center;
  padding: 80rpx 0 70rpx;
}
.p-home__header .img {
  width: 60rpx;
  height: 40rpx;
}
.p-home__header .name {
  margin-top: 6rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}
.p-home__header .info {
  color: '#333';
  padding-right: 10px;
  text-align: right;
}
.p-home__info {
  margin-top: 20rpx;
}
.p-home__info .desc {
  text-align: center;
}
.p-home .items {
  display: flex;
  padding: 0rpx 20rpx 20rpx 40rpx;
}
.p-home .items .item {
  margin-right: 20rpx;
  flex: 1;
  background-color: #eaf3fe;
  display: flex;
  flex-direction: column;
  padding: 40rpx 0 20rpx;
  justify-content: center;
  align-items: center;
  border-radius: 4rpx;
}
.p-home .items .item .img {
  width: 100rpx;
  height: 100rpx;
}
.p-home .items .item .name {
  margin-top: 20rpx;
}
.p-home .charts {
  padding: 0 20rpx;
  display: flex;
}
.p-home .charts .select .name {
  font-size: 24rpx;
  border-bottom: 4rpx solid #ccc;
  margin-bottom: 20rpx;
  line-height: 40rpx;
  text-align: center;
  color: #ccc;
}
.p-home .charts .chart {
  position: relative;
}
.p-home .charts .chart .content {
  text-align: center;
}
.p-home .charts .chart .value {
  font-size: 52rpx;
  font-weight: bold;
  text-align: center;
}
.p-home .charts .chart .name {
  font-size: 24rpx;
}
.p-home .table {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border-top: 1px solid #f2f2f2;
  border-left: 1px solid #f2f2f2;
  margin: 0 20rpx;
}
.p-home .table .th {
  background-color: #eaf3fe;
}
.p-home .table .tr .name {
  background-color: #f2f2f2;
}
.p-home .table .tr,
.p-home .table .th {
  display: flex;
  border-bottom: 1rpx solid #e8e8e8;
}
.p-home .table .tr .td,
.p-home .table .th .td {
  border-right: 1rpx solid #e8e8e8;
  line-height: 48rpx;
  position: relative;
  text-align: center;
}
.p-home .table .tr .name,
.p-home .table .th .name {
  width: 26%;
}
.p-home .table .tr .value,
.p-home .table .th .value {
  flex: 1;
}
.p-home .table .tr .line,
.p-home .table .th .line {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.p-home .table2 {
  margin: 0;
}
.c-info2 {
  width: 100%;
  position: relative;
  z-index: 10;
}
.c-info2__table {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border-top: 1px solid #f2f2f2;
  border-left: 1px solid #f2f2f2;
  margin: 20rpx 0 0;
}
.c-info2__table .th {
  background-color: #e8e8e8;
}
.c-info2__table .tr .name {
  background-color: #f2f2f2;
}
.c-info2__table .tr,
.c-info2__table .th {
  display: flex;
  border-bottom: 1rpx solid #e8e8e8;
}
.c-info2__table .tr .td,
.c-info2__table .th .td {
  border-right: 1rpx solid #e8e8e8;
  line-height: 48rpx;
  position: relative;
  text-align: center;
  padding: 10rpx 8rpx;
  box-sizing: border-box;
}
.c-info2__table .tr .value,
.c-info2__table .th .value {
  text-align: left;
  align-items: center;
  justify-content: center;
  display: flex;
}
.c-info2__footer {
  margin: 40rpx 20rpx 0;
  display: flex;
  justify-content: space-evenly;
}
.c-info2__footer .btn {
  height: 70rpx;
  border-radius: 8rpx;
  width: 200rpx;
  background-color: #f2f2f2;
  text-align: center;
  line-height: 70rpx;
}
.c-info2__footer .btn2 {
  background-color: #169bd5;
  color: #fff;
}

