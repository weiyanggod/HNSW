.c-safe .header {
  display: flex;
}
.c-safe .header .item {
  min-width: initial;
  padding: 10rpx 4rpx;
  flex-grow: 1;
  background-color: #eaf3fe;
  border-radius: 8rpx 8rpx 0 0;
  border: 1px solid #eaf3fe;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  align-items: center;
}
.c-safe .header .itemed {
  background-color: #fff;
  border: 1px solid #e8e8e8;
  border-bottom: 1px solid #fff;
}
.c-safe__table {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border-top: 1px solid #f2f2f2;
  border-left: 1px solid #f2f2f2;
  margin: 20rpx 0 0;
}
.c-safe__table .th {
  background-color: #e8e8e8;
}
.c-safe__table .tr .name {
  background-color: #f2f2f2;
}
.c-safe__table .tr,
.c-safe__table .th {
  display: flex;
  border-bottom: 1rpx solid #e8e8e8;
}
.c-safe__table .tr .td,
.c-safe__table .th .td {
  border-right: 1rpx solid #e8e8e8;
  line-height: 48rpx;
  position: relative;
  text-align: center;
  padding: 0 2rpx;
}
.c-safe__table .tr .name,
.c-safe__table .th .name {
  width: 26%;
}
.c-safe__table .tr .value,
.c-safe__table .th .value {
  flex: 1;
}
.c-safe__table .tr .status,
.c-safe__table .th .status {
  align-items: center;
  justify-content: center;
  display: flex;
}
.c-safe__table .tr .status text,
.c-safe__table .th .status text {
  flex: 1;
}
.c-safe__table .tr .improve,
.c-safe__table .th .improve {
  margin-right: 4rpx;
  width: 42rpx;
  height: 40rpx;
}
.c-safe__footer {
  margin: 40rpx 20rpx 0;
  display: flex;
  justify-content: space-evenly;
}
.c-safe__footer .btn {
  height: 70rpx;
  border-radius: 8rpx;
  width: 200rpx;
  background-color: #f2f2f2;
  text-align: center;
  line-height: 70rpx;
}
.c-safe__footer .btn2 {
  background-color: #169bd5;
  color: #fff;
}
.c-safe .u-modal {
  height: 600rpx;
  display: flex;
  flex-direction: column;
}
.c-safe .u-modal_photo {
  flex: 1;
  line-height: 48rpx;
}
.c-safe .u-modal_btn {
  height: 70rpx;
  border-radius: 8rpx;
  width: 200rpx;
  background-color: #f2f2f2;
  text-align: center;
  line-height: 70rpx;
  margin: auto auto 10rpx;
  background-color: #169bd5;
  color: #fff;
}

