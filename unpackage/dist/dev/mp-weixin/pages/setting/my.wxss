page {
  background-color: #f3f4f8;
}
.my-header {
  position: relative;
}
.my-header-bg {
  height: 480rpx;
  width: 750rpx;
  background-color: #F1F5F8;
}
.my-info {
  position: absolute;
  width: 750rpx;
  height: 100%;
  left: 20rpx;
  top: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.my-info-avatar {
  height: 180rpx;
  width: 180rpx;
}
.my-info-name {
  color: #fff;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-left: 16rpx;
}
.ucenter-line {
  height: 20rpx;
}
.grace-list {
  background-color: #fff;
  position: relative;
}
.grace-list-items {
  padding: 0 20rpx;
}
.grace-list-items:active {
  background-color: #f7f7f7;
}
.grace-list-title-text {
  font-size: 28rpx;
}
.grace-list-items {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.grace-list-body {
  flex: 1;
}
.container {
  height: 100%;
  overflow-x: hidden;
}
.container .item {
  background-color: #fff;
  padding: 0 20rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .item text {
  margin-left: 20rpx;
  flex: 1;
}

